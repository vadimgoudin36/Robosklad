<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.labs.lab4.controller.FourthLabController">

    <top>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Машина" onAction="#drawCar"/>
            <Button text="Мотоцикл" onAction="#drawMotorcycle"/>
            <Button text="Велосипед" onAction="#drawBicycle"/>
            <Button text="Очистить" onAction="#clearCanvas"/>
        </HBox>
    </top>

    <center>
        <Canvas fx:id="canvas" width="500" height="350"/>
    </center>

</BorderPane>
